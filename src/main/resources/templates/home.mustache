<h1>Hello {{username}}!</h1>

<form action="/logout" method="post">
    <input type="submit" value="Sign Out"/>
</form>

<table>
    <thead>
    <tr>
        <td>Code</td>
        <td>Name</td>
        <td>Language</td>
        <td>Stock</td>
        <td>Price</td>
        <td>Actions</td>
    </tr>
    </thead>
    <tbody>
    {{#productlist}}
        <tr>
            <td>{{code}}</td>
            <td>{{name}}</td>
            <td>{{language}}</td>
            <td>{{stock}}</td>
            <td>{{price}}</td>
            <td>
                <form action="/home/buy/{{code}}" method="post" style="display:inline;">
                    <button type="submit">Buy</button>
                </form>

                <form action="javascript:void(0)" style="display:inline;">
                    <button type="button">Add to Cart</button>
                </form>
            </td>
        </tr>
    {{/productlist}}
    </tbody>
</table>